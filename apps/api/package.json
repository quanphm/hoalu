{
	"name": "@hoalu/api",
	"version": "0.18.0",
	"type": "module",
	"files": [
		"dist"
	],
	"imports": {
		"#api/*": "./src/*"
	},
	"exports": {
		"./types": "./dist/types/index.d.ts"
	},
	"scripts": {
		"build:api": "bun build ./src/index.ts --outdir ./dist --target bun --production",
		"build:types": "bun tsc -p tsconfig.build.json",
		"prebuild": "bun run clean",
		"build": "bun run build:api && bun run build:types",
		"clean": "rimraf -rf dist",
		"dev": "bun db:migrate && bun --watch src/index.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"@electric-sql/client": "^1.4.1",
		"@hoalu/auth": "workspace:*",
		"@hoalu/common": "workspace:*",
		"@hoalu/countries": "workspace:*",
		"@hoalu/email": "workspace:*",
		"@hoalu/furnace": "workspace:*",
		"@hono/standard-validator": "^0.2.2",
		"@hono/zod-validator": "^0.7.6",
		"@react-email/render": "^2.0.2",
		"@scalar/hono-api-reference": "^0.9.33",
		"better-auth": "catalog:",
		"drizzle-orm": "^0.45.1",
		"hono": "catalog:",
		"hono-openapi": "^1.1.2",
		"ioredis": "^5.9.2",
		"nodemailer": "^7.0.12",
		"pg": "^8.17.1",
		"react": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@hoalu/tsconfig": "workspace:*",
		"@types/bun": "catalog:",
		"@types/react": "catalog:",
		"@types/nodemailer": "^7.0.5",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"rimraf": "^6.1.2"
	}
}
