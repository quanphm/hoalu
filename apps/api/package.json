{
	"name": "@hoalu/api",
	"version": "0.4.0",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./types": "./dist/types/index.d.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"clean": "rimraf -rf dist",
		"prebuild": "bun run clean",
		"build:api": "bun build ./src/index.ts --outdir ./dist --target bun --minify --sourcemap",
		"build:types": "tsc -p tsconfig.build.json",
		"build": "bun run build:api && bun run build:types",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"lint": "biome lint ./src",
		"format": "biome check --write ."
	},
	"dependencies": {
		"@hoalu/auth": "workspace:*",
		"@hoalu/common": "workspace:*",
		"@hoalu/email": "workspace:*",
		"@hoalu/furnace": "workspace:*",
		"@react-email/render": "^1.0.5",
		"@scalar/hono-api-reference": "^0.5.175",
		"arktype": "^2.1.0",
		"better-auth": "^1.1.21",
		"drizzle-orm": "^0.39.3",
		"hono": "^4.7.2",
		"hono-openapi": "^0.4.5",
		"ioredis": "^5.5.0",
		"minio": "^8.0.4",
		"nodemailer": "^6.10.0",
		"postgres": "^3.4.5",
		"react": "^19.0.0",
		"resend": "^4.1.2"
	},
	"devDependencies": {
		"@hoalu/tsconfig": "workspace:*",
		"@types/bun": "latest",
		"@types/nodemailer": "^6.4.17",
		"drizzle-kit": "^0.30.5",
		"rimraf": "^6.0.1"
	}
}
