{
	"name": "@hoalu/api",
	"version": "0.3.0",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./types": "./dist/types/app.d.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"clean": "rimraf -rf dist",
		"prebuild": "bun run clean",
		"build:api": "bun build ./src/index.ts --outdir ./dist --target bun --minify --sourcemap",
		"build:types": "tsc -p tsconfig.build.json",
		"build": "bun run build:api && bun run build:types",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"lint": "biome lint ./src"
	},
	"dependencies": {
		"@hono/valibot-validator": "^0.5.2",
		"@react-email/render": "^1.0.4",
		"@scalar/hono-api-reference": "^0.5.168",
		"@valibot/to-json-schema": "^1.0.0-beta.5",
		"@hoalu/auth": "workspace:*",
		"@hoalu/common": "workspace:*",
		"@hoalu/email": "workspace:*",
		"@hoalu/furnace": "workspace:*",
		"better-auth": "^1.1.14",
		"drizzle-orm": "^0.38.4",
		"drizzle-valibot": "^0.3.1",
		"hono": "^4.6.17",
		"hono-openapi": "^0.4.3",
		"minio": "^8.0.3",
		"nanoid": "^5.0.9",
		"nodemailer": "^6.9.16",
		"postgres": "^3.4.5",
		"react": "^19.0.0",
		"valibot": "^1.0.0-beta.14"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@hoalu/tsconfig": "workspace:*",
		"drizzle-kit": "^0.30.2",
		"rimraf": "^6.0.1"
	}
}
