{
	"name": "@hoalu/api",
	"version": "0.6.0",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./types": "./dist/types/index.d.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"clean": "rimraf -rf dist",
		"prebuild": "bun run clean",
		"build:api": "bun build ./src/index.ts --outdir ./dist --target bun --minify --sourcemap",
		"build:types": "tsc -p tsconfig.build.json",
		"build": "bun run build:api && bun run build:types",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"lint": "biome lint ./src",
		"format": "biome check --write ."
	},
	"dependencies": {
		"@hoalu/auth": "workspace:*",
		"@hoalu/common": "workspace:*",
		"@hoalu/countries": "workspace:*",
		"@hoalu/email": "workspace:*",
		"@hoalu/furnace": "workspace:*",
		"@react-email/render": "^1.1.0",
		"@scalar/hono-api-reference": "^0.5.184",
		"arktype": "^2.1.20",
		"better-auth": "^1.2.7",
		"drizzle-orm": "^0.39.3",
		"hono": "^4.7.8",
		"hono-openapi": "^0.4.8",
		"ioredis": "^5.6.1",
		"nodemailer": "^6.10.1",
		"pg": "^8.15.6",
		"react": "^19.1.0",
		"resend": "^4.5.0"
	},
	"devDependencies": {
		"@hoalu/tsconfig": "workspace:*",
		"@types/bun": "latest",
		"@types/nodemailer": "^6.4.17",
		"@types/pg": "^8.11.14",
		"drizzle-kit": "^0.30.6",
		"rimraf": "^6.0.1"
	}
}
