{
	"name": "@woben/server",
	"version": "0.3.0",
	"type": "module",
	"files": ["dist"],
	"exports": {
		"./types": "./dist/types/app.d.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"clean": "rimraf -rf dist",
		"prebuild": "bun run clean",
		"build:server": "bun build ./src/index.ts --outdir ./dist --target bun --minify --sourcemap",
		"build:types": "tsc -p tsconfig.build.json",
		"build": "bun run build:server && bun run build:types",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"lint": "biome lint ./src"
	},
	"dependencies": {
		"@hono/valibot-validator": "^0.5.2",
		"@scalar/hono-api-reference": "^0.5.166",
		"@valibot/to-json-schema": "^1.0.0-beta.4",
		"@woben/common": "workspace:*",
		"@woben/furnace": "workspace:*",
		"better-auth": "^1.1.14",
		"drizzle-orm": "^0.38.4",
		"drizzle-valibot": "^0.3.1",
		"hono": "^4.6.16",
		"hono-openapi": "^0.4.1",
		"minio": "^8.0.3",
		"nanoid": "^5.0.9",
		"pg": "^8.13.1",
		"redaxios": "^0.5.1",
		"valibot": "^1.0.0-beta.12"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/pg": "^8.11.10",
		"@woben/tsconfig": "workspace:*",
		"drizzle-kit": "^0.30.2",
		"rimraf": "^6.0.1"
	}
}
