{
	"extends": "@hoalu/tsconfig/vite.json",
	"compilerOptions": {
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"jsx": "react-jsx",
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src", "tailwind.config.ts"]
}
