{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"files": {
		"includes": [
			"**/src/**",
			"!**/src/routeTree.gen.ts",
			"!**/src/**/*.css",
			"**/email/emails/**",
			"**/vite.config.ts"
		],
		"ignoreUnknown": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							[":BUN:", ":NODE:"],
							["npm:*", "npm:*/**", ":PACKAGE_WITH_PROTOCOL:", ":URL:"],
							[":PACKAGE:", "!@hoalu/**"],
							":BLANK_LINE:",
							"@hoalu/**",
							":BLANK_LINE:",
							["#app/**", "#api/**"]
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"formatWithErrors": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noChildrenProp": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noExplicitAny": "info",
				"noArrayIndexKey": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useSemanticElements": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": ["apps/app/src/routes/__root.tsx"],
			"assist": {
				"actions": {
					"source": {
						"organizeImports": "off"
					}
				}
			}
		}
	]
}
