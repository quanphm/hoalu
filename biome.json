{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/src/**", "**/email/emails/**", "**/vite.config.ts"]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							[":BUN:", ":NODE:"],
							["npm:*", "npm:*/**", ":PACKAGE_WITH_PROTOCOL:", ":URL:"],
							[":PACKAGE:", "!@hoalu/**"],
							":BLANK_LINE:",
							"@hoalu/**",
							"@/**"
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"formatWithErrors": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useSemanticElements": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	}
}
