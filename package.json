{
	"name": "hoalu",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"docker:up": "cd deployments && docker compose -f docker-compose.local.yml up -d --build",
		"docker:down": "cd deployments && docker compose down",
		"lint": "biome lint",
		"format": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"packageManager": "bun@1.2.15"
}
