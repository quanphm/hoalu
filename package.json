{
	"name": "hoalu",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"@types/bun": "^1.3.0",
			"@types/react": "^19.2.0",
			"@types/react-dom": "^19.2.0",
			"zod": "^4.1.12",
			"react": "^19.2.0",
			"react-dom": "^19.2.0",
			"hono": "^4.9.9",
			"better-auth": "^1.3.27"
		}
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --filter=\"./apps/*\"",
