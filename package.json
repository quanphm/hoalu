{
	"name": "hoalu",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"@types/bun": "^1.3.6",
			"@types/react": "^19.2.8",
			"@types/react-dom": "^19.2.3",
			"zod": "^4.3.5",
			"react": "^19.2.3",
			"react-dom": "^19.2.3",
			"hono": "^4.11.4",
			"better-auth": "^1.4.13",
			"tailwindcss": "^4.1.18"
		}
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --filter=\"./apps/*\"",
		"docker:up": "cd deployments && docker compose -f docker-compose.local.yml up -d --build",
		"docker:down": "cd deployments && docker compose -f docker-compose.local.yml down",
		"lint": "biome lint",
		"format": "biome check --write",
		"knip": "knip"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"knip": "^5.81.0",
		"turbo": "^2.7.4",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	},
	"overrides": {
		"chalk": "5.6.2",
		"ora": "8.2.0"
	},
	"trustedDependencies": [
		"@swc/core"
	],
	"packageManager": "bun@1.3.1"
}
